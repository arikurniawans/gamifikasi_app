<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rela1"
                    android:layout_height="250dp">
                    <ImageView
                        android:id="@+id/backdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:alpha="0.6"
                        android:background="@drawable/slide"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_kotak"
                        android:alpha="0.4"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Aplikasi Panic Button"
                            android:id="@+id/txtStatus"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/love_music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aplikasi Pai"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="30dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </RelativeLayout>


                    </LinearLayout>
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rela1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:id="@+id/line1"
                    android:weightSum="3">


                    <TableLayout
                        android:id="@+id/tableLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:shrinkColumns="*"
                        android:stretchColumns="*"
                        tools:ignore="ObsoleteLayoutParam,RtlCompat">

                        <TableRow
                            android:id="@+id/tableRowBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingBottom="1dp">

                            <TextView
                                android:id="@+id/txa"
                                android:padding="20dp"
                                android:text=""></TextView>

                            <Button
                                android:id="@+id/btnmenu1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_background"
                                android:drawableTop="@drawable/ic_menu1"
                                android:gravity="center|center_horizontal"
                                android:padding="1dp"
                                android:text="Pencarian Bimbel"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/txb"
                                android:padding="2dp"
                                android:text=""></TextView>

                            <Button
                                android:id="@+id/btnmenu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_background"
                                android:drawableTop="@drawable/ic_menu2"
                                android:gravity="center|center_horizontal"
                                android:padding="1dp"
                                android:text="Profil"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txc"
                                android:padding="20dp"
                                android:text=""></TextView>
                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRowBtn1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp">

                            <TextView
                                android:id="@+id/txa1"
                                android:padding="2dp"
                                android:text=""></TextView>

                            <Button
                                android:id="@+id/btnmenu3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_background"
                                android:drawableTop="@drawable/ic_menu3"
                                android:gravity="center|center_horizontal"
                                android:padding="1dp"
                                android:text="Bantuan"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txb1"
                                android:padding="2dp"
                                android:text=""></TextView>

                            <Button
                                android:id="@+id/btnmenu4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_background"
                                android:drawableTop="@drawable/ic_menu4"
                                android:gravity="center|center_horizontal"
                                android:padding="1dp"
                                android:text="Logout"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txc2"
                                android:padding="2dp"
                                android:text=""></TextView>
                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRowBtn2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/txi"
                                android:padding="2dp"
                                android:text=""></TextView>
                        </TableRow>

                    </TableLayout>



                </LinearLayout>




            </RelativeLayout>

        </ScrollView>



    </FrameLayout>

</RelativeLayout>